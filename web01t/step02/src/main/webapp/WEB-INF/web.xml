<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
  version="3.1"
  metadata-complete="true">

  <!-- 서블릿 클래스에 대해 선언한다. -->
  <servlet>
    <!-- 서블릿 별명을 선언한다. 공백을 포함할 수 있다. 마음대로 작성하라. 
         그러나 프로그래밍의 일관성을 위해 클래스 이름으로 작성하는 것이 좋다. -->
    <servlet-name>hello servlet</servlet-name>
    <servlet-class>servlet.HelloServlet</servlet-class>
  </servlet>
  
  <!-- 서블릿 클래스에 URL을 부여한다. -->
  <servlet-mapping>
    <servlet-name>hello servlet</servlet-name>
    <!-- URL 이름을 작성할 때 공백을 주어서는 안된다. 확장자명은 마음대로.
         사용자가 웹 브라우저에서 요청할 때는 다음과 같이 요청해야 한다.
         http://localhost:8080/web01/ohora/hi -->
    <url-pattern>/ohora/hi</url-pattern>
  </servlet-mapping>

</web-app>






